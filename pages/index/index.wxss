/**index.wxss**/
.top{
  background-color: #94DAED;
  display: flex;
  flex-direction: row;
  height: 120px;
  text-align: center;
  align-items: center;
}

.block{
  width: 50%;
  display: flex;
  flex-direction: column;
}
.small {
  font-size: smaller;
  padding-left: 80px;
}
.large {
  font-size: x-large;
  line-height: 60px;
}

.table{
  display: flex;
  flex-direction: row;
  line-height: 35px;
  margin-left: 7%;
  margin-bottom: 5px;
}

.radio{
  margin-right: 3px;
}
.radio-group {
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
  position: relative;
  right:0;
}

radio .wx-radio-input{ 
    border-radius: 20rpx; 
    height: 30rpx; 
    width: 30rpx;
 }

 /* radio选中时样式 */ 
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 20rpx; 
  background-color:rgba(155, 153, 153, 0.856); 
}

.tr {
  display: flex;
  margin-left:7.5%;
  width: 85%;
  height: 2.5rem;
  align-items: center;
}

.tdLeft {
    width:30%;
    padding-left: 4%;
    justify-content: flex-start;
    text-align: left;
}

.tdCenter {
    width:55%;
    justify-content: center;
    text-align: right;
}
.tdCenter2 {
  width:10%;
  justify-content: center;
  text-align: right;
}

.tdRight {
    justify-content: flex-end;
    text-align: right;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  color: #fff;
  display: flex;
  align-items: center;
}