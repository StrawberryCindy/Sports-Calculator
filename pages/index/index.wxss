/**index.wxss**/
.top{
  background-color: lightblue;
  display: flex;
  flex-direction: row;
  height: 75px;
  text-align: center;
  align-items: center;
}

.block{
  width: 50%;
  display: flex;
  flex-direction: column;
}

.table{
  display: flex;
  flex-direction: row;
}
.radio{
  margin-right: 0px;
}
.radio-group {
  display: flex;
  flex-direction: row;
  justify-content:flex-end;
  position: relative;
  right:0;
}

radio .wx-radio-input{ 
    border-radius: 20rpx; 
    height: 30rpx; 
    width: 30rpx;
 }

 /* radio选中时样式 */ 
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 20rpx; 
  background-color:rgba(155, 153, 153, 0.856); 
}

.tr {
  display: flex;
  margin-left:7.5%;
  width: 85%;
  height: 2rem;
  align-items: center;
}

.tdLeft {
    width:30%;
    padding-left: 4%;
    justify-content: flex-start;
    text-align: left;
}

.tdCenter {
    width:55%;
    justify-content: center;
    text-align: right;
}

.tdRight {
    justify-content: flex-end;
    text-align: right;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}