<!--index.wxml-->
<view class="container">
  <view class="top">
    <view class="left">身体质量指数：{{BMI}}</view>
    <view class="right">总成绩：{{mark}}</view>
  </view> 
  <view class='table'>
    <text>性别：</text>
    <radio-group class="radio-group" bindchange="radioChange1">
      <label class="radio" wx:for="{{items}}">
       <radio class="radio" value="{{item.name}}" />{{item.value}}
      </label>
    </radio-group>
  </view>
  <view class='table'>
    <text>年级：</text>
    <radio-group class="radio-group" bindchange="radioChange2">
      <label class="radio" wx:for="{{items2}}">
        <radio class="radio" value="{{item.name}}" />{{item.value}}
      </label>
    </radio-group>
  </view >
  <view>
      <block wx:for="{{listData}}" wx:key="{{project}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="tdLeft">{{item.project}}</view>
        <view class="tdCenter"><input placeholder='请输入'></input></view>
        <view class="tdRight">{{item.unit}}</view>
      </view>
      <view class="tr" wx:else>
        <view class="tdLeft">{{item.project}}</view>
        <view class="tdCenter"><input placeholder='请输入'></input></view>
        <view class="tdRight">{{item.unit}}</view>
      </view>
    </block>
  </view>
</view>
